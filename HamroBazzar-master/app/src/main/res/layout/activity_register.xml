<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E9E5E5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/sliderDotsPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#479FD8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imgSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:text="SignUp Form"
            android:textColor="#fff"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="402dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderDotsPanel"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="401dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_border"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderDotsPanel"
                app:layout_constraintVertical_bias="0.0">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Email address:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />


                <TextView
                    android:id="@+id/tvfullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Full Name:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />


                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Password (between 6 and 20 chars):"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="308dp"
                    android:drawableEnd="@drawable/ic_reye"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />


                <TextView
                    android:id="@+id/tvConPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Confirm password:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etConPassword"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_reye" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Phone:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Mobile Phone:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="20dp"
                    android:text="Enter 10 digit Mobile No. starting with 9*********" />

                <TextView
                    android:id="@+id/tvAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address 1 (Street Name):"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAddress1"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tvAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address 2 (Area Location):"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAddress2"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="20dp"
                    android:text="E.g Kupondole, New Baneshwor etc" />

                <TextView
                    android:id="@+id/tvAddress3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address 3 (City Name):"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAddress3"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tvSubscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Subscribe / Hide Phone:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/chSubscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:buttonTint="#2F93D4"
                    android:text="I do not want to subscribe to site newsletter."
                    android:textColor="#000" />

                <CheckBox
                    android:id="@+id/chPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#2F93D4"
                    android:text="Hide my phone numvber (only contact me through email)"
                    android:textColor="#000" />

                <CheckBox
                    android:id="@+id/chAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#2F93D4"
                    android:drawableRight="@drawable/ic_star"
                    android:text="I have read and agree to terms of use."
                    android:textColor="#000"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="#2F93D4"
                    android:text="Register"
                    android:textColor="#fff" />

            </LinearLayout>
        </ScrollView></LinearLayout>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="53dp"
        android:layout_height="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left" />



</androidx.constraintlayout.widget.ConstraintLayout>